{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "outDir": "dist/",
      "removeComments": true,
      "preserveConstEnums": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
  }